#include <stdio.h>

int getScores(float* scores)
{
    int number;
    printf("how many scores?\n");
    printf("give me a number\n");
    scanf("%i", &number);
    printf("%i\n", number);
    for (int i=0; i<number; i++)
    {
        printf("Score %i is: \n", i);
        scanf("%f", &scores[i]);
        printf("Score %i is %f\n", i, scores[i]);
    }
    return 0;
}

int main(void)
{
    float scores[5];
    getScores(scores);
    return 0;
}
